before_all do
  ENV["FASTLANE_GRADLE_PROJECT_DIR"] =
      "src-capacitor/android"
end

default_platform(:android)

platform :android do
  desc "Sowell Custom Lane"
  lane :beta do
    gradle(task: "clean assembleRelease",project_dir: "src-capacitor/android")
  end
end
